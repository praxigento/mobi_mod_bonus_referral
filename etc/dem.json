{
  "dBEAR": {
    "package": {
      "Praxigento": {
        "alias": "prxgt",
        "comment": "Root namespace for Praxigento modules.",
        "package": {
          "Bonus": {
            "alias": "bon",
            "comment": "Package for bonus related structures.",
            "package": {
              "Referral": {
                "alias": "referral",
                "comment": "Space for Referral Bonus data structures.",
                "entity": {
                  "Registry": {
                    "alias": "reg",
                    "comment": "Registry for referral bonus entries.",
                    "attribute": {
                      "SaleRef": {
                        "alias": "sale_ref",
                        "comment": "Sale order reference.",
                        "nullable": false,
                        "type": {"integer": {"unsigned": true}}
                      },
                      "UplineRef": {
                        "alias": "upline_ref",
                        "comment": "Reference for referral's upline.",
                        "nullable": false,
                        "type": {"integer": {"unsigned": true}}
                      },
                      "OperationRef": {
                        "alias": "operation_ref",
                        "comment": "Bonus payout operation reference.",
                        "nullable": true,
                        "type": {"integer": {"unsigned": true}}
                      },
                      "State": {
                        "alias": "state",
                        "comment": "Referral bonus state (pending | paid | reverted).",
                        "nullable": false,
                        "type": {"text": {"length": 255}}
                      },
                      "AmountTotal": {
                        "alias": "amount_total",
                        "comment": "Total bonus amount to be paid to the upline of the referral.",
                        "nullable": false,
                        "type": {"numeric": {"precision": 12, "scale": 4}}
                      },
                      "AmountFee": {
                        "alias": "amount_fee",
                        "comment": "Processing fee to be subtracted from total bonus.",
                        "nullable": false,
                        "type": {"numeric": {"precision": 12, "scale": 4}}
                      }
                    },
                    "index": {
                      "primary": {
                        "type": "primary",
                        "aliases": ["sale_ref"]
                      }
                    },
                    "relation": {
                      "toSaleOrder": {
                        "own": {"aliases": ["sale_ref"]},
                        "reference": {
                          "entity": {
                            "completeAlias": "sales_order"
                          },
                          "aliases": ["entity_id"]
                        },
                        "action": {
                          "delete": "cascade",
                          "update": "cascade"
                        }
                      },
                      "toDwnCustomer": {
                        "own": {"aliases": ["upline_ref"]},
                        "reference": {
                          "entity": {"completeAlias": "prxgt_dwnl_customer"},
                          "aliases": ["customer_ref"]
                        },
                        "action": {
                          "delete": "cascade",
                          "update": "cascade"
                        }
                      },
                      "toOperation": {
                        "own": {"aliases": ["operation_ref"]},
                        "reference": {
                          "entity": {
                            "completeAlias": "prxgt_acc_operation"
                          },
                          "aliases": ["id"]
                        },
                        "action": {
                          "delete": "cascade",
                          "update": "cascade"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}